generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ingredients {
  id    Int     @id @default(autoincrement())
  ingredient String
  quantity Float
  measurement String?
  user_id String
}

model recipes {
  id Int @id @default(autoincrement())
  user_id String
  name String
  description String
  ingredients Json
  steps String[]
}
